{
  "appId": "com.gamelauncher.app",
  "productName": "Game Launcher",
  "directories": {
    "output": "release/"
  },
  "files": [
    "dist/**/*",
    "main.js",
    "preload.js",
    "setup-downloads.js",
    "package.json"
  ],
  "publish": {
    "provider": "github",
    "owner": "Logan_McGo",
    "repo": "GameManager"
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "icon": "src/assets/icon.ico"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "allowElevation": true
  }
}
